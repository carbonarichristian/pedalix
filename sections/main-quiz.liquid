<div class="quiz page-width">

  <form id="quizForm">
    <div class="container">
      <h2>1) What are you looking for?</h2>
      <div class="label-container">
        <input type="radio" id="bike" name="product_type" value="bike">
        <label for="bike">
          <div class="img-wrap">
            <img src="{{'quiz-bike.jpg' | asset_url}}">
          </div>
          <span>A new bike</span>
        </label>
        <input type="radio" id="equipment" name="product_type" value="equipment">
        <label for="equipment">
          <div class="img-wrap">
            <img src="{{'quiz-equipment.jpg' | asset_url}}">
          </div>
          <span>Equipment</span>
        </label>
      </div>
    </div>

  </form>
  <div id="nav-buttons">
    <button id="prev-button" class="button previous-btn" disabled>← Previous</button>
    <button id="next-button" class="button next-btn">Next →</button>
    <button id="finish-button" class="button next-btn" style="display: none">Submit</button>
  </div>

</div>

